{
  "include": [
    "src/**/*" ],
  "compilerOptions": {
    "target": "ES2021", 
    "lib": [
      "ES6"
    ], 
    "module": "commonjs", 
    "rootDir": "./", 
   
    "baseUrl": ".", 
    "paths": {
      "@controllers/*": [
        "./src/api/controllers/*"
      ],
      "@models/*": [
        "./src/api/models/*"
      ],
      "@repositories/*": [
        "./src/api/repositories/*"
      ],
      "@services/*": [
        "./src/api/services/*"
      ]
    }, 
    "typeRoots": [
      "./node_modules/@types"
    ], 
    "resolveJsonModule": true,                       
    "allowJs": true, 
    "outDir": "./dist", 
    "removeComments": true, 
    "noEmitOnError": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "skipLibCheck": true 
  }
}
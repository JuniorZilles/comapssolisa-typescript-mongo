{
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [
        "./src/api/controllers/*"
      ],
      "@models/*": [
        "./src/api/models/*"
      ],
      "@repositories/*": [
        "./src/api/repositories/*"
      ],
      "@services/*": [
        "./src/api/services/*"
      ],
      "@errors/*": [
        "./src/api/errors/*"
      ],
      "@validations/*": [
        "./src/api/validations/*"
      ],
      "@middlewares/*": [
        "./src/api/middlewares/*"
      ],
      "@interfaces/*": [
        "./src/api/interfaces/*"
      ],
      "@serialize/*": [
        "./src/api/serialize/*"
      ],
      "@utils/*": [
        "./src/api/utils/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}